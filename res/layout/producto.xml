<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout android:orientation="vertical" 
				android:layout_height="fill_parent"
            	android:layout_width="fill_parent"
            	android:cacheColorHint="#3500ffff"
            	android:layout_weight="1.0">
		<TextView android:text="Rellena los campos:" android:id="@+id/textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<TextView android:text="Nombre:" android:id="@+id/textView2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:text="" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/txtNombreP">
			<requestFocus></requestFocus>
		</EditText>
		<TextView android:text="Codigo:" android:id="@+id/textView3"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/linearLayout4" android:layout_height="wrap_content">
			<EditText android:layout_weight="1" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/txtBarCode"
				android:hint="Mantener para escanear"></EditText>
			<ImageView android:layout_height="fill_parent"
				android:layout_width="wrap_content" android:id="@+id/imgScanP"
				android:src="@drawable/barcode_scanner"></ImageView>
		</LinearLayout>
		<CheckBox android:text="Añadir en despensa" android:id="@+id/chbAñadirEnDespensa"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
		<LinearLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:id="@+id/LytStock"
			android:layout_width="fill_parent">
			<TextView android:text="Cantidad:" android:layout_width="wrap_content" android:id="@+id/textView5" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_width="60px" android:id="@+id/txtCantidad" android:inputType="number" android:layout_height="wrap_content" android:text="0"></EditText>
			<TextView android:text="Cantidad minima:" android:layout_width="wrap_content" android:id="@+id/textView6" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_width="60px" android:id="@+id/txtCantidadMinima" android:inputType="number" android:layout_height="wrap_content" android:text="0"></EditText>
		</LinearLayout>
		<TextView android:text="Notas:" android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_width="wrap_content"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/txtNotas" android:layout_width="fill_parent"></EditText>
		<Spinner android:id="@+id/CmbCategorias" android:layout_width="fill_parent" android:layout_height="wrap_content"></Spinner>
	</LinearLayout>
	
	
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|center_horizontal"
        android:padding="10dip"
		android:gravity="center_vertical">
		<LinearLayout android:id="@+id/linearLayout1" 
					  android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:baselineAligned="true">
			<Button android:text="Guardar" android:id="@+id/BtnGuardar"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></Button>
			<Button android:text="Cancelar" android:id="@+id/BtnCancelar"
				android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"></Button>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
