<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout android:orientation="vertical" 
				android:layout_height="fill_parent"
            	android:layout_width="fill_parent"
            	android:cacheColorHint="#3500ffff"
            	android:layout_weight="1.0">
		<TextView android:text="Rellena los campos:" android:id="@+id/textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<TextView android:text="Nombre:" android:id="@+id/textView2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:text="" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/txtNombreP">
			<requestFocus></requestFocus>
		</EditText>
		<TextView android:text="Codigo:" android:id="@+id/textView3"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/linearLayout4" android:layout_height="wrap_content">
			<EditText android:layout_weight="1" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/txtBarCode"
				android:hint="Mantener pulsado para escanear"></EditText>
			<ImageView android:layout_height="fill_parent"
				android:layout_width="wrap_content" android:id="@+id/imgScanP"
				android:src="@drawable/barcode_scanner"></ImageView>
		</LinearLayout>
		<TextView android:text="Notas:" android:id="@+id/textView4"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:text="" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/txtNotas"></EditText>
		<Spinner android:id="@+id/CmbCategorias"
			android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
		<CheckBox android:text="Añadir en despensa" android:id="@+id/chbAñadirEnDespensa"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
		<LinearLayout android:orientation="vertical"
			android:layout_height="wrap_content" android:id="@+id/LytStock"
			android:layout_width="fill_parent">
			<TableLayout android:layout_width="match_parent"
				android:id="@+id/tableLayout1" android:layout_height="wrap_content">
				<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:id="@+id/textView5"
						android:layout_height="wrap_content" android:text="Cantidad:"
						android:layout_width="wrap_content"></TextView>
					<EditText android:layout_height="wrap_content"
						android:layout_width="60px" android:inputType="number"
						android:text="0" android:id="@+id/txtCantidad"></EditText>
				</TableRow>
				<TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:id="@+id/textView6"
						android:layout_height="wrap_content" android:text="Cantidad minima:"
						android:layout_width="wrap_content"></TextView>
					<EditText android:layout_height="wrap_content"
						android:layout_width="60px" android:inputType="number"
						android:text="0" android:id="@+id/txtCantidadMinima"></EditText>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</LinearLayout>
	
	
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|center_horizontal"
        android:padding="10dip"
		android:gravity="center_vertical">
		<LinearLayout android:id="@+id/linearLayout1" 
					  android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:baselineAligned="true">
			<Button android:text="Guardar" android:id="@+id/BtnGuardar"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></Button>
			<Button android:text="Cancelar" android:id="@+id/BtnCancelar"
				android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"></Button>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
